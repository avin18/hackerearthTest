<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size18</item>
    </style>

    <style name="TitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SubTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NameInitialsStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ImgCardViewStyle" parent="CardView">
        <item name="android:layout_width">@dimen/img_size55</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ConstraintLayoutMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactConstraintLayoutStyle" parent="ConstraintLayoutMain">
        <item name="android:padding">12dp</item>
    </style>

    <style name="AddContactConstraintLayoutStyle">
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LinearLayoutVerticalMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ContactLinearLayoutStyle" parent="LinearLayoutVerticalMain">
        <item name="background">?android:selectableItemBackground</item>
    </style>

    <style name="LoaderStyle" parent="LinearLayoutVerticalMain">
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="EditTextMain" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
    </style>

    <style name="ContactNameEditTextStyle" parent="EditTextMain">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="ContactNumberEditTextStyle" parent="EditTextMain">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
